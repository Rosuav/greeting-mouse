{
	"manifest_version": 3,
	"name": "Greeting Mouse",
	"description": "Highlight the first message from anyone",
	"version": "0.0.7",
	"permissions": ["storage", "contextMenus", "scripting", "activeTab"],
	"icons": {"128": "icon128.png"},
	"background": {"service_worker": "service.js"},
	"content_scripts": [
		{
			"matches": ["https://*.twitch.tv/*"],
			"css": ["highlighter.css"],
			"js": ["highlighter.js"]
		}
	]
}
